# Supabase (use service role key â€” pipeline needs full DB access)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key

# APIs
OUTSCRAPER_API_KEY=your_outscraper_key
OPENROUTER_API_KEY=your_openrouter_key
INSTANTLY_API_KEY=your_instantly_key

# Target Market
TARGET_LOCATION=Munich, Germany
TARGET_CATEGORY=All Categories

# Residential proxy for Instagram/Facebook scraping (optional)
# Without this, social media enrichment will be skipped from datacenter IPs
# Format: http://user:pass@host:port
SOCIAL_PROXY=

# Pipeline Settings
DAILY_SCRAPE_TARGET=100
SOCIAL_PROOF_STAGE=1
SENDER_FIRST_NAME=James

# Modes: passive, active, autonomous
LEARNING_MODE=passive

# Logging
LOG_LEVEL=INFO
DEBUG=false
